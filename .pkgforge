name 'iproute2'
org 'amylum'

licenses 'COPYING'

deps(
  iptables: {
    version: '1.6.1-8',
    checksum: 'cbb69ad891a8b2f4e924642ea85a98a6f22dade85f814489a8a66b8d7f48bbb0'
  },
  libmnl: {
    version: '1.0.4-16',
    checksum: 'f91bd0ae906beb874dadd60ee571d5bedb6b3f6fb4e0fd1285a32e9697da3de4'
  },
  'linux-api-headers': {
    version: '4.12-1',
    checksum: '25d3672456a93cc7f6743d4b2c227ad7a9456f4ec2a9f09ab7f2e9e6cb56aeaa'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'iproute2-4.12.0-musl.patch'

build do
  configure
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

