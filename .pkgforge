name 'iproute2'
org 'amylum'

licenses 'COPYING'

deps(
  iptables: {
    version: '1.6.1-11',
    checksum: '6b870bcec37a96cf3b9f027e43bc4b106e04275f163f31c3228550e40bced219'
  },
  libmnl: {
    version: '1.0.4-18',
    checksum: 'a042cbf5a4442b478582de61ace4445a65c63984265c71c9c76293e5e5fdbc8c'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

cflags
harden

patch 'iproute2-4.12.0-musl.patch'

build do
  configure
  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' Config"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

test do
  # TODO: add tests
end
