    checksum: '6c4b7e78068f698d3093a66ac3afdae4fe7544ee2e3400372f136f4496ca9173'
  },
  libmnl: {
    version: '1.0.4-22',
    checksum: 'b7107d73ac741993743b40dea9075e3a070a7a1df6cfd5a83201fb17b48e7d13'
  },
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  },
  elfutils: {
    version: '0.172-1',
    checksum: 'a438f56f7798ad60e23ce93d4538da911f6027d276bc73fa6d79d91b4c6fa055'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  fts: {
    version: '1.2.7-1',
    checksum: '93b98d9167dd79de2bc47be61617a9c5f9837f4d9a7ffc27e75183cb0a760b63'
  },
  obstack: {
    version: '1.1-1',
    checksum: 'c399085201ed4583d8f46ef9930cb7b0b5fa1ec513abb34e9d715b249f3231f0'
  },
  libcap: {
    version: '2.25-38',
    checksum: '659a88ba1dbfd4532ffb1cdb066aafd95707c03d9473dc6ebc501bdb8b5e7ddc'
  }
)

patch 'rdma.patch'

cflags
cflags(%w{-L/usr/lib/musl/lib -lfts -lobstack -lz -lc})
harden

build do
  configure

  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' config.mk"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

