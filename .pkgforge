name 'iproute2'
org 'amylum'

licenses 'COPYING'

deps(
  iptables: '1.6.1-8',
  libmnl: '1.0.4-16',
  'linux-api-headers': '4.12-1'
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch '0001-in-in6.patch'
patch '0002-ethhdr-redefine.patch'

build do
  configure
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

test do
  # TODO: add tests
end
