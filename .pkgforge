name 'iproute2'
org 'amylum'

licenses 'COPYING'

deps(
  iptables: {
    version: '1.6.2-2',
    checksum: 'bb316d3a528ce89fe8567070fd18f08cf2a4021ee79f86e128e51409fc87510d'
  },
  libmnl: {
    version: '1.0.4-19',
    checksum: 'c9e1ef506f99fcd0796a8e0b1bc8ad0af9ab6b117019bd4dd4d35fc7c3e2167b'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

cflags
harden

build do
  configure

  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' config.mk"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

test do
  # TODO: add tests
end
