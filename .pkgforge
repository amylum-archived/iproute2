    version: '1.8.0-1',
    checksum: 'd9b4ea1a0c58582d7f2e0efc9575afe4ede26ea8c5a00312a50657182ba35f6d'
  },
  libmnl: {
    version: '1.0.4-23',
    checksum: 'e090c2e48cb3f572276137f7a892c317b72a7ffb05a706095537b05b84dfdc03'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  },
  elfutils: {
    version: '0.173-1',
    checksum: 'f4a1cb62e0e5df5541e0c6f4173caef096a15fedf1400fb505ef75a564d0e13d'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  fts: {
    version: '1.2.7-1',
    checksum: '93b98d9167dd79de2bc47be61617a9c5f9837f4d9a7ffc27e75183cb0a760b63'
  },
  obstack: {
    version: '1.1-1',
    checksum: 'c399085201ed4583d8f46ef9930cb7b0b5fa1ec513abb34e9d715b249f3231f0'
  },
  libcap: {
    version: '2.25-39',
    checksum: '7e8327b91cda3971cfb3241f07d095ffb982774cf27b956beb6c35b2533c6538'
  }
)

patch 'rdma.patch'

cflags
cflags(%w{-L/usr/lib/musl/lib -lfts -lobstack -lz -lc})
harden

build do
  configure

  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' config.mk"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

