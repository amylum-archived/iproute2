    checksum: 'd9b4ea1a0c58582d7f2e0efc9575afe4ede26ea8c5a00312a50657182ba35f6d'
  },
  libmnl: {
    version: '1.0.4-24',
    checksum: 'c6b5d9e9cb4516fce124f4de5a175f6b6f444e12b6ce49c2203ad096d233002e'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  },
  elfutils: {
    version: '0.175-1',
    checksum: '41e8eee773ec34c27b2bf7c0a71d396b2e85dc7bcebbd1d527f91c6b6f54e1ef'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  fts: {
    version: '1.2.7-1',
    checksum: '93b98d9167dd79de2bc47be61617a9c5f9837f4d9a7ffc27e75183cb0a760b63'
  },
  obstack: {
    version: '1.1-1',
    checksum: 'c399085201ed4583d8f46ef9930cb7b0b5fa1ec513abb34e9d715b249f3231f0'
  },
  libcap: {
    version: '2.25-44',
    checksum: '4fbd26514144043b6798add7a7ef5261e82f6c346dd66f48d83fbf738e442662'
  }
)

patch 'rdma.patch'

cflags
cflags(%w{-L/usr/lib/musl/lib -lfts -lobstack -lz -lc})
harden

build do
  configure

  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' config.mk"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

