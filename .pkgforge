name 'iproute2'
org 'amylum'

licenses 'COPYING'

deps(
  iptables: {
    version: '1.6.2-5',
    checksum: '2f17ca19909b02b2c71985fc3fb421a9bbb2ed0107aa2754961eca13d5a468b5'
  },
  libmnl: {
    version: '1.0.4-21',
    checksum: 'e30db51239a7474c361d8d5cfb0e1c983b275e9a104225d048ed6162d07eeb80'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  },
  elfutils: {
    version: '0.170-1',
    checksum: '40f22201caecf486b94f908005a57d6feb2627c0ddbbafad3339fa3c480eb3d7'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  fts: {
    version: '1.2.7-1',
    checksum: '93b98d9167dd79de2bc47be61617a9c5f9837f4d9a7ffc27e75183cb0a760b63'
  },
  obstack: {
    version: '1.1-1',
    checksum: 'c399085201ed4583d8f46ef9930cb7b0b5fa1ec513abb34e9d715b249f3231f0'
  },
  libcap: {
    version: '2.25-37',
    checksum: 'f3c892340ce93e1f561a3526b1e81c18561f4407394975e4a2253f79d6fefb7e'
  }
)

cflags
cflags(%w{-L/usr/lib/musl/lib -lfts -lobstack -lz -lc})
harden

build do
  configure

  run "sed 's|IPT_LIB_DIR:=.*|IPT_LIB_DIR:=#{dep(:iptables)}/usr/lib/iptables|' config.mk"
  make "CFLAGS" => "#{@forge.cflags.join(' ')}", "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  install
  run "mv #{releasedir}/sbin #{releasedir}/usr/bin"
end

